<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Edita "{{coasterToEdit.name}}"</h1>
    </div>

    <div class="col-md-6">

      <form action="/coasters/edit/{{coasterToEdit._id}}" method="POST">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input" value="{{coasterToEdit.name}}">
        </div>
        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input" value="{{coasterToEdit.description}}">
        </div>
        <div class="form-group">
          <label for="inversions-input">Inversiones</label>
          <input name="inversions" type="number" class="form-control" id="inversions-input" value={{coasterToEdit.inversions}}>
        </div>
        <div class="form-group">
          <label for="length-input">Longitud</label>
          <input name="length" type="number" class="form-control" id="length-input" value={{coasterToEdit.length}}>
        </div>

        {{!-- Active field as hidden input with default value : true --}}
        <input type="checkbox" checked style="visibility: hidden; display: none">

        <div class="form-group">
          <label for="park-list">Parque en el que se encuentra:</label>
          <select name="park" class="form-control" id="park-list">
            <option value="" selected disabled>{{coasterToEdit.park.name}}</option>
            {{#each parks}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
          </select>

        </div>

        <button type="submit" class="btn btn-dark">Editar montaña rusa</button>
        <a href="/coasters" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>
